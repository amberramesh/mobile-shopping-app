<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moonc.mobileshoppingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_white"
        android:label="Mobile Shopping"
        android:roundIcon="@mipmap/icon_white"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".Register" />
        <activity android:name=".AdminPanel" />
        <activity android:name=".Catalog" />
        <activity android:name=".ProductPage" />
        <activity android:name=".MyAccount" />
        <activity android:name=".Cart" />
        <activity android:name=".AddProduct" />
        <activity android:name=".UpdateProduct" />
        <activity android:name=".DeleteProduct" />
        <activity android:name=".AddAdmin" />
        <activity android:name=".DeleteUser"></activity>
    </application>

</manifest>